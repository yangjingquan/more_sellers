/**index.wxss**/
page{
    background-color: #eeeeee;
    height: 100%;
}
.mine_container{
    display: flex;
    flex-direction:column;
    
}
.userinfo {
    display: flex;
    flex-direction: column;
    height: 360rpx;
    background-color: #fff;
}

.avatar_view{
    width: 100%;
    height: 204rpx;
    display: flex;
    flex-wrap: wrap;
    box-sizing: border-box;
    align-items: center;
}

.avatar {
    width: 180rpx;
    height: 180rpx;
    border-radius: 50%;
    margin: 0 auto;
    line-height: 100%;
}

.username_view{
    width: 100%;
    height: 156rpx;
    text-align: center;
}

.in_username_view{
  display: flex;
  flex-direction:column;
    width: 50%;
    height: 100%;
    margin-left: 25%;
}

.username{
    font-size: 36rpx;
    color: #000000;
    height: 60rpx;
    line-height: 60rpx;
}

.rec_id{
    font-size: 28rpx;
    color: #ccc;
    height: 50rpx;
    line-height: 50rpx;
}

.jifen{
    font-size: 28rpx;
    color: #ccc;
    height: 50rpx;
    line-height: 50rpx;
}

.order,.address,.coupon,.custom_service,.acode,.income,.rec_order,.my_team{
    display: flex;
    flex-direction: row;
    width: 100%;
    height: 100rpx;
    background-color: #fff;
}

.order,.address,.coupon,.acode{
    margin-top: 20rpx;
}

.custom_service,.income,.rec_order,.my_team{
  margin-top: 2rpx;
}

.order_img_view,.address_img_view,.coupon_img_view,.custom_service_img_view,.acode_img_view,.income_img_view,.rec_order_img_view,.my_team_img_view{
    display: flex;
    flex-wrap: wrap;
    box-sizing: border-box;
    align-items: center;
    width: 10%;
    height: 100%;
    margin-left:2.8%;
}

.my_order_view,.address_view,.coupon_view,.custom_service_view,.acode_view,.income_view,.rec_order_view,.my_team_view{
margin-left: 15rpx;
    height:100rpx;
    text-align:center;
}

.my_order,.my_address,.my_coupon,.connect,.my_acode,.my_income,.my_rec_order,.my_team_text{
    font-size: 36rpx;
    line-height: 100rpx;
}

.jiantou_view,.coupon_jiantou_view,.acode_jiantou_view{
    display: flex;
    flex-wrap: wrap;
    box-sizing: border-box;
    align-items: center;
    width: 10%;
    height: 100%;
}

.jiantou_view{
    margin-left: 55%;
}

.coupon_jiantou_view{
    margin-left: 3%;
}

.acode_jiantou_view{
    margin-left: 50%;
}

.jiantou{
    width: 55%;
    height: 40%;
    margin: 0 auto;
    line-height: 100%;
}

.order_icon,.address_icon,.earphone_icon,.coupon_icon,.acode_icon,.income_icon,.rec_order_icon,.my_team_icon{
    margin: 0 auto;
    line-height: 100%;
}

.order_icon,.acode_icon,.income_icon,.rec_order_icon,.my_team_icon{
    width: 65%;
    height: 50%;
}

.address_icon,.earphone_icon,.coupon_icon{
    width: 70%;
    height: 55%;
}

.coupon_notice_view{
    width:52%;
    height:100rpx;
}

.coupon_notice{
    font-size: 30rpx;
    line-height: 100rpx;
    color: #cccccc;
}


