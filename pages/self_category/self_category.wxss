/**category.wxss**/
page{  
  background: #f5f5f5;
  height:100%;  
}  
 
.container {  
  display: flex;
  flex-direction: row;
  position: relative;  
  width: 100%;  
  height: 100%;  
  background-color: #fff;  
  color: #939393;  
  border-top:1px solid #dedede;

}  
   
.nav_left{   
  display: inline-block;  
  width: 25%;  
  height: 100%;   
  background: #f5f5f5;  
  text-align: center;  
}  
 
.nav_left .nav_left_items{    
  height: 30px;    
  line-height: 30px;   
  padding: 6px 0;   
  border-bottom: 1px solid #dedede;
  font-size: 14px;  
}  
 
.nav_left .nav_left_items.active{
  background: #fff;  
  border-right:1rpx solid #f2f2f2;
}  
  
.nav_right{  
  display: flex;
  flex-direction: column; 
  flex: 1;  
  width: 75%;  
  height: 100%;
  box-sizing: border-box;  
  background: #fff;  
}  
  
.nav_right .nav_right_items{  
  float: left;  
  width: 100%;  
  height: 100%;  
  text-align: center;  
}  

.nav_right .nav_right_items image{
  width: 50px;  
  height: 30px;  
}  

.nav_right .nav_right_items text{ 
  display: block;  
  margin-top: 5px;  
  font-size: 10px; 
  overflow: hidden;  
  white-space: nowrap;  
  text-overflow: ellipsis;  
}  

.orderAndCategory{
    display: flex;
    flex-direction: column;
    width:100%;
    /* margin-top: 15rpx; */
}

.orders{
    display: flex;
    flex-direction: row;
    width:100%;
    height: 60rpx;
}

.zonghe,.byPrice,.byCount{
    font-size: 26rpx;
    color: #000;
    line-height: 60rpx;
}

.zonghe{
    margin-left: 8%;
}
.byPrice{
    margin-left: 25%;
}

.byCount{
    margin-left: 11%;
}

.jiantou{
    width: 50%;
    height:30rpx;
    margin-top: 15rpx;
}

.about_price{
    display: flex;
    flex-direction: row;
    width: 170rpx;
    margin-left: 8%;
}
.jiantou_view{
    display: flex;
    flex-direction: column;
    width: 17%;
    margin-left:2%;
}

.line{
    margin-top: 20rpx;
    background-color: #fafafa;
    height: 4rpx;
    width: 95%;
    margin-left: 5%;
}

.categorys{
    display: flex;
    flex-direction: row;
    width: 100%;
    margin-top: 20rpx;
}

.category{
    width:165rpx;
    height:50rpx;
    background-color: #ffffff;
    color:#6e6e6e;
    margin-left: 2.5%;
    text-align: center;
    border: 1px solid #EEEEEE;
    border-radius: 5px;
}

.category_text{
    font-size: 28rpx;
    line-height: 50rpx;
}

.products{
    display: flex;
    flex-direction: column;
    width: 97%;
    margin-left: 2%;
    margin-top: 20rpx;
}

.one_pro{
    display: flex;
    flex-direction: row;
    width: 100%;
}

.pro_image_view{
    width: 180rpx;
    height: 180rpx;
}

.pro_image{
    width: 100%;
    height: 100%;
}

.nameAndPrice{
    width: 65%;
    margin-left:3%;
}

.pro_name_view{
    width: 96%;
    word-break: break-all;
}

.pro_name{
    font-size: 28rpx;
    color: #939393;
    word-break: break-all;
    text-overflow: ellipsis; 
    display: -webkit-box;  
    -webkit-line-clamp: 3;  
    -webkit-box-orient: vertical;
    overflow: hidden;
}

.prices{
    margin-top: 26rpx;
    margin-left: 8rpx;
}

.cur_price{
    font-size: 32rpx;
    color: #EC6B25;
}

.org_price{
    font-size: 24rpx;
    color: #BFBFBF;
    margin-left:10rpx;
    text-decoration: line-through;
}

.active{   
  background: #fff;  
} 

.active1{   
  background: #f4f4f4;  
}

.loading{  
  padding: 10rpx;  
  text-align: center;  
}  
.loading:before{  
  display: inline-block;  
  margin-right: 5rpx;  
  vertical-align: middle;  
  content: '';  
  width: 40rpx;  
  height: 40rpx;  
  background: url(../../images/icon-loading.png) no-repeat;  
  background-size: contain;  
  animation: rotate 1s linear infinite;  
}  
.loading.complete:before{  
  display: none;  
}  