.recorder_container {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
}

.tongji {
  display: flex;
  flex-direction: row;
  background-color: #303030;
  height: 200rpx;
}

.tongji1_view,.tongji2_view{
    width: 50%;
    display: flex;
    flex-direction: column;
    height: 200rpx;
}

.tongji11,.tongji21 {
  color: #f1f1f1;
  font-size: 30rpx;
  margin-top: 30rpx;
  margin-left: 40rpx;
}

.tongji12,.tongji22 {
  color: #fff;
  font-size: 60rpx;
  margin-top: 20rpx;
  margin-left: 40rpx;
}

.order_con {
  margin-top: 30rpx;
  margin-bottom: 20rpx;
}

.order_con1 {
  display: flex;
  flex-direction: row;
  border-bottom: 1px #f2f2f2 solid;
}

.order_date {
  margin-left: 20rpx;
  font-size: 26rpx;
  color: #ccc;
  width: 35%;
  height: 60rpx;
  line-height: 60rpx;
}

.order_no {
  margin-left: 10%;
  font-size: 26rpx;
  color: #ccc;
  width: 55%;
  height: 60rpx;
  line-height: 60rpx;
}

.order_con2 {
  display: flex;
  flex-direction: row;
  margin-left: 2%;
  margin-right: 2%;
  width: 96%;
  border-bottom: 1px #f2f2f2 solid;
  height: 90rpx;
  line-height: 90rpx;
}

.images {
  /**让包含的图片居中**/
  display: flex;
  justify-content: center;
  align-items: center;
  /**让包含的图片居中**/
  width: 80rpx;
  margin-left: 10rpx;
}

.order_icon {
  width: 60rpx;
  height: 60rpx;
}

.order_buy {
  width: 65%;
  font-size: 30rpx;
  color: #999;
  margin-left: 5rpx;
}

.order_total {
  width: 35%;
  font-size: 26rpx;
}

.order_income {
  width: 35%;
  font-size: 32rpx;
  color: #f00;
}

.table {
  border: 0px solid darkgray;
  font-size: 25rpx;
}
.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 2rem;
  align-items: center;
}
.td {
    width:40%;
    justify-content: center;
    text-align: center;
}
.bg-w{
  background: snow;
}
.bg-g{
  background: #E6F3F9;
}
.th {
  width: 40%;
  justify-content: center;
  background: #3366FF;
  color: #fff;
  display: flex;
  height: 2rem;
  align-items: center;
}

.table_top{
  margin-top: 2%;
}