<!--index.wxml-->
<view class="index">
  <swiper class="first_swiper" indicator-dots="true" autoplay="true" interval="3000" circular="true">
    <block wx:for="{{recommend_pics}}">
      <swiper-item>
        <image src="{{item.image}}" class="first_swiper-item"></image>
      </swiper-item>
    </block>
  </swiper>
  <view class="section section_gap">
    <view class="scroll-view_H">
      <view class="scroll-view-item_H" wx:for="{{hotList}}" wx:key="{{item}}" data-catid="{{item.cat_id}}" bindtap="yuyue">
        <image src="{{item.pic}}" class="scroll-image" />
        <view class="title">{{item.title}}</view>
      </view>
    </view>
  </view>
  <view class="section section_gap">
    <view class="scroll-view_H">
      <view class="scroll-view-item_H" wx:for="{{hotList1}}" wx:key="{{item}}" data-catid="{{item.cat_id}}" bindtap="yuyue">
        <image src="{{item.pic}}" class="scroll-image" />
        <view class="title">{{item.title}}</view>
      </view>
    </view>
  </view>
  <view class="gonggao">
    <image src="/pics/cat/101.png" class="gonggao-image" />
    <swiper class="gonggao-text" autoplay="true" interval="3000" circular="true" vertical="true">
      <block wx:for="{{gonggao}}">
        <swiper-item class="gonggao-view"  bindtap="ToGongGao" data-proid="{{item.id}}">
        <view class="gonggao-text-view">
          <text class="gonggao-text1">{{item.title}}</text>
          <text class="gonggao-text1">{{item.create_time}}</text>
          </view>
          <image src="{{item.img1}}" class="gonggao-image1" />
        </swiper-item>
      </block>
    </swiper>
    
  </view>
  
  <view class="advertisement_view">
    <view class="bis_title_view">
      <view class="bis_title_view1">
        <text class="bis_title">-  广告位   -</text>
      </view>
    </view>
    <block wx:for="{{tupian_info}}" wx:for-item="item">
      <view class="single_ad_view">
          <image class="ad_pic" src='{{item.img_url}}'></image>
      </view>
    </block>
  </view>

  

  <view class="new_pro">
    <view class="recommend_title_view">
      <text class="recommend_line">-</text>
      <image class="recommend_pic" src="/pics/other/hot.png"></image>
      <text class="recommend_title">爆款推荐   -</text>
    </view>
    <view class="line"></view>
    <view class="pro_content">
      <view class="row_content">
        <block wx:for="{{recommend_info}}">
          <view class="single_pro" bindtap="getProDetail" data-proid="{{item.pro_id}}">
            <image class="new_pro_img" src="{{item.thumb}}"></image>
            <view class="new_pro_name_view">
              <text class="new_pro_name">{{item.p_name}}</text>
            </view>
            <view class="new_pro_price">
              <view class="new_cur_price_view">
                <text class="new_cur_price">￥{{item.associator_price}}</text>
              </view>
              <view class="new_org_price_view">
                <text class="new_org_price">￥{{item.original_price}}</text>
              </view>
            </view>
          </view>
        </block>
      </view>
    </view>
  </view>

  <view class="rec_mall_view">
    <view class="bis_title_view">
      <view class="bis_title_view1">
        <text class="bis_title">-  推荐商家   -</text>
      </view>
    </view>
    <view class="rec_content_view">
      <scroll-view class="rec_content_scroll" scroll-x>
        <block wx:for="{{tjsj_info}}">
          <view class="rec_content" bindtap="bisTap" data-bisid="{{item.id}}">
              <view class="rec_pic_view">
                <image class="rec_pic" src='{{item.thumb}}'></image>
              </view>
              <view class="rec_sjmc_view">
                <text class="rec_sjmc">{{item.bis_name}}</text>
              </view>
          </view>
        </block>
      </scroll-view>
    </view>
  </view>

  <view class="rec_canyin_view">
    <view class="bis_title_view">
      <view class="bis_title_view1">
        <text class="bis_title">-  推荐餐饮   -</text>
      </view>
    </view>
    <view class="rec_canyin_content_view">
      <scroll-view class="rec_canyin_content_scroll" scroll-x>
        <block wx:for="{{cat_mall_info}}">
          <view class="rec_canyin_content" bindtap="catBisTap" data-bisid="{{item.bis_id}}">
            <view class="rec_canyin_pic_view">
              <image class="rec_canyin_pic" src='{{item.logo_image}}'></image>
            </view>
            <view class="rec_cat_view">
              <text class="rec_cat_text">{{item.bis_name}}</text>
            </view>
          </view>
        </block>
      </scroll-view>
    </view>
  </view>

  <view class="bis_view">
    <view class="bis_title_view">
      <view class="bis_title_view1">
        <text class="bis_title">-  附近店铺   -</text>
      </view>
    </view>
    <view class="bis_content_view">
      <block wx:for="{{bis_info}}">
        <view class="single_bis_view" bindtap="bisTap" data-bisid="{{item.bis_id}}">
          <view class="bis_img_view">
            <image class="bis_img" src="{{item.thumb}}" mode="widthFix"></image>
          </view>
          <view class="bis_name_view">
            <text class="bis_name">{{item.bis_name}}</text>
            <view class="bis_count_view">
              <view class="bis_brand_view">
                <text class="bis_brand">经营：{{item.brand}}</text>
              </view>
              <view class="distance_view">
                  <text class="distance">{{item.distance}}</text>
              </view>
            </view>
            <view class="bis_star_view">
                <image class="bis_star" src="/pics/icons/5star.png" mode="widthFix"></image>
              </view>
            <text class="bis_address">{{item.address}}</text>
          </view>
        </view>
      </block>
    </view>
  </view>
</view>