/* order_template.wxss */
.order_info{
    display: flex;
    flex-direction: column;
    width: 100%;
    margin-top:4%;
}

.first_floor{
    display: flex;
    flex-direction: row;
    margin-top:2%;
    margin-bottom:2%;
}

.bis_title_view{
    width: 100%;
    height: 80rpx;
    display: flex;
    flex-direction: row;
}

.bis_img_view{
    width: 11%;
    height: 80rpx;
    margin-left:2%;
}

.bis_img{
    width:70%;
    height: 70%;
    margin:15% 15%;
}

.bis_name_view{
    width: 60%;
    height: 80rpx;
    display:flex;
}

.bis_name{
    font-size: 30rpx;
    line-height: 80rpx;
}

.order_no_view{
    margin-left: 5%;
    width:72%;
}

.order_no{
    font-size: 32rpx;
    color: #686868;
}

.pay_status_view{
    margin-left: 7%;
    text-align: right;
}

.pay_status{
    font-size: 32rpx;
    color: #686868;
}

.second_floor{
    display: flex;
    flex-direction:  row;
    width: 100%;
    margin-top:3%;
    margin-bottom:3%
}

.image_view{
    width: 30%;
    height: 170rpx;
    margin-left:5%;
}

.pro_image{
    width: 100%;
    height: 100%;
}

.pro_name_view{
    display: flex;
    flex-direction:  column;
    width: 60%;
    margin-left: 3%;
    margin-top: 2%;
}

.pro_name{
    font-size: 32rpx;
    color: #2f2f2f;
}

.guige{
    font-size: 24rpx;
    color: #2f2f2f;
    margin-top: 10%;
}

.third_floor{
    display: flex;
    flex-direction:  row;
    width: 100%;
    margin-top:3%;
}

.amount_view{
    width: 45%;
    margin-left: 5%;
}

.amount{
    font-size: 34rpx;
    color: #2f2f2f;
}

.buttons{
    display: flex;
    flex-direction:  row;
    width: 50%;
}

.confirm_receive_button_view,.cancel_order_button_view,.payment_button_view,.pre_payment_button_view{
    height: 60rpx;
    background-color: #DD3029;
    border: 1px solid #EEEEEE;
    border-radius: 5px;
    text-align:center;
}

.cancel_order_button_view{
    height: 60rpx;
    background-color: #bfbfbf;
    border: 1px solid #EEEEEE;
    border-radius: 5px;
    text-align:center;
}

.check_logistics_button_view{
    height: 60rpx;
    background-color: #3aa8c3;
    border: 1px solid #EEEEEE;
    border-radius: 5px;
    text-align:center;
}

.check_logistics_button_view,.cancel_order_button_view{
    width: 150rpx;
    margin-left:9%;
}

.check_logistics_button,.cancel_order_button{
    line-height: 60rpx;
    color: #fff;
    font-size: 28rpx;
}

.confirm_receive_button_view,.payment_button_view{
    width: 150rpx;
    margin-left:3%;
}

.confirm_receive_button,.payment_button{
    line-height: 60rpx;
    color: #fff;
    font-size: 28rpx;
}

.pre_payment_button_view{
    width: 120rpx;
    margin-left:61%;
}

.pre_payment_button{
    line-height: 60rpx;
    color: #fff;
    font-size: 28rpx;
} 

.strong_line{
    margin-top: 20rpx;
    background-color: #f6f6f6;
    height: 20rpx;
    width: 100%;
}

.thin_line{
    background-color: #f6f6f6;
    height: 4rpx;
    width: 94%;
    margin-left: 3%;
}