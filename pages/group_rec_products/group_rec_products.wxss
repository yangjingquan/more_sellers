.index{
  width: 100%;
  height: 100%;
}

.recommend{
    display: flex;
    flex-direction: column;
    width: 100%;
}

.thin_line{
    background-color: #f4f4f4;
    height: 15rpx;
    width: 100%;
}

.recommend_content{
    display: flex;
    flex-direction: row;
    width: 100%;
    height: 260rpx;
    margin-top:2%
}

.pro_img_view{
    width:220rpx;
    height:220rpx; 
    margin-left:5%;
}

.pro_img{
    width: 100%; 
    height:100%;
}

.content {
    display: flex;
    flex-direction: column;
    width: 62%;
    margin-left: 2%;
}

.pro_name{
    font-size: 30rpx;
    color: #000000;
}

.pro_nature{
    font-size: 24rpx;
    color: #666666;
    margin-top: 34rpx;
}

.priceAndButton{
    display: flex;
    flex-direction: row;
    width: 100%;
}

.about_price {
    display: flex;
    flex-direction: column;
    margin-top: 5rpx;
    width: 60%;
}

.cur_price_view{
    width: 100%;
}

.group_count_text{
    font-size: 24rpx;
    color: #CC8891;
    margin-left:2%;
}

.cur_price{
    font-size:34rpx;
    margin-top: 50rpx;
    color:#EB6B5F;
}

.org_price_view{
    width: 100%;
}

.org_price_title,.org_price{
    font-size: 24rpx;
    margin-top: 55rpx;
    margin-left: 2%;
    color: #cccccc;
}

.org_price{
    text-decoration:line-through;
}

.button_view{
    width: 34%;
    margin-left: 3%;
    height: 70rpx;
    background-color: #FC303B;
    text-align: center;
    margin-top:6%;
    border-radius: 3px;
}

.pintuan_button{
  font-size: 30rpx;
  line-height: 70rpx;
  color: #fff;
}