.c_order_container{
    display: flex;
    flex-direction: column;
    width: 100%;
    height: 100%;
}

.address_view{
    display: flex;
    flex-direction: column;
    width: 100%;
    margin-top: 3%;
}

.nameAndMobile{
    display: flex;
    flex-direction: row;
    width: 100%;
}

.name_view{
   width: 20%; 
   margin-left: 3%
}

.name,.mobile{
    font-size: 34rpx;
    color: #000;
}

.mobile_view{
    width: 30%; 
    margin-left: 4%
}

.address_view1{
    width: 95%;
    margin-left: 3%
}

.address{
    font-size: 28rpx;
    color: #a4a4a4; 
}

.notice_view{
  width: 100%;
  text-align: center;
}

.notice{
  font-size: 34rpx;
  color: #cccccc;
}
.thin_line{
    margin-top: 10rpx;
    background-color: #eeeeee;
    height: 3rpx;
    width: 100%;
}

.strong_line{
    margin-top: 10rpx;
    background-color: #eeeeee;
    height: 25rpx;
    width: 100%;
}

.pro_info{
    display: flex;
    flex-direction: row;
    width: 100%; 
    margin-top: 3%;
    margin-bottom: 3%;
}

.img_view{
    width: 25%;
    height: 170rpx;
    margin-left: 2%;
}

.img{
    width: 95%;
    height: 100%;
}

.nameAndPrice{
    display: flex;
    flex-direction: column;
    width: 68%; 
    margin-left: 3%;
}

.pro_name_view{
    width: 100%;
    word-break: break-all;
}

.pro_name{
    font-size: 28rpx;
    color: #000; 
}

.guige_view{
    width: 100%;
}

.guige{
    font-size: 26rpx;
    color: #b3b3b3; 
}

.price_view{
    width: 100%;
    display: flex;
    flex-direction: row;
}

.unit_price_view{
    width: 30%;
}

.price{
    font-size: 32rpx;
    color: #b1364a;  
}

.count_view{
    display: flex;
    flex-direction: row;
    width: 40%;
    margin-left: 30%;
    height: 58rpx;
}

.sub_view{
    width: 30%;
    border: 1px solid #EEEEEE;
    border-radius: 5px 0 0 5px;
    text-align: center;
    height: 58rpx;
}

.sub{
    line-height: 58rpx;
}

.count_view1{
    width: 40%;
    border: 1px solid #EEEEEE;
    text-align: center;
    height: 58rpx;
    border-left: none;
    border-right: none;
}

.count{
    font-size: 32rpx;
    line-height: 58rpx;
}

.plus_view{
    width: 30%;
    border: 1px solid #EEEEEE;
    border-radius: 0 5px 5px 0;
    text-align: center;
    height: 58rpx;
}

.plus{
    line-height: 58rpx;
}

.remark_view{
    display: flex;
    flex-direction: row;
    width: 100%;
    height: 70rpx;
    margin-top: 1%;
}

.remark_label{
    font-size: 28rpx;
    color: #000;
    margin-left: 4%;
    line-height: 70rpx;
}

.remark_input{
    font-size: 28rpx;
    color: #000;  
    line-height: 70rpx;
    margin-top: 1.3%;
}

.freight_view{
    width: 100%;
    display: flex;
    flex-direction: row;
    margin-top: 3%;
    height: 70rpx;
}

.freight_text{
    font-size: 28rpx;
    color: #000; 
    margin-left: 4%;
    line-height: 70rpx;
     width: 150rpx;
}

.freight{
    font-size: 28rpx;
    color: #000; 
    margin-left: 56%;
    line-height: 70rpx;
    width: 100rpx;
}
.freight_icon1{
  width: 30rpx;
  height: 30rpx;
  margin-top: 20rpx;
}

.freight_icon2{
  width: 30rpx;
  height: 30rpx;
  margin-top: 20rpx;
  margin-right: 20rpx;
  margin-left: 15rpx;
}

.weight_view{
    width: 100%;
    margin-top: 3%;
    height: 70rpx;
    text-align: center;
}

.weight_view1{
    width: 100%;
    margin-top: 3%;
    height: 70rpx;
    text-align: center;
    background:#f1f1f1;
}

.total_weight_title,.total_weight_text,.first_heavy_title,.first_heavy_text,.continue_heavy_title,.continue_heavy_text,.ykj_title,.ykj_text{
    font-size: 28rpx;
    color: #000;
    line-height: 70rpx;
}

.first_heavy_title,.continue_heavy_title{
    margin-left: 2%;
}

.amount_view{
  display: flex;
    flex-direction: row;
    width: 100%;
    height: 80rpx;
    margin-top: 3%;
}

.amount_content{
   width: 97%; 
   height: 80rpx;
   text-align:right;
}
.amount{
    font-size: 34rpx;
    color: #C78078; 
    line-height: 80rpx;
}

button{
    background-color:#51A938;
}

.buttons{
    width: 100%;
    height: 80rpx;
    margin-top: 7%;
    margin-bottom: 4%;
}

.pay_view{
    height: 80rpx;
    text-align: center;
    width: 80%;
    margin-left: 10%;
    background-color: #51A938;
    border-radius: 5px;
}

.pay{
    font-size: 32rpx;
    line-height: 80rpx;
    color: #ffffff;
}

.transport_view{
    display: flex;
    flex-direction: row;
    width: 100%;
    margin-top: 3%; 
    height: 70rpx;
}

.transport_picker_label_view{
    width: 33%;
    height: 100%;
    margin-left: 4%;
}

.transport_label{
    font-size: 28rpx;
    color: #000;
    line-height: 70rpx;
}

.transport_picker_view{
    width: 60%;
    height: 100%;
    text-align: right;
}

.transport_picker{
    width: 50%;
    font-size: 28rpx;
    color: #000; 
    margin-left: 50%;
    line-height: 70rpx;
}
