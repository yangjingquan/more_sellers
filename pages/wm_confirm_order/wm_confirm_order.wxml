<view class="c_order_container">
    <form bindsubmit="formSubmit">
      <view wx:if="{{showAddress}}" class="address_view" catchtap="choose_address">
        <view class="address_icon_view">
            <image class="address_icon" src="/pics/icons/address_icon.png" mode="widthFix"></image>
        </view>
        <view class="nameAndMobile_view">
          <view class="nameAndMobile">
              <view class="name_view">
                  <text class="name">{{rec_name}}</text>
                  <text class="mobile">{{mobile}}</text>
              </view>
          </view>
          <view class="address_view1">
              <text class="address">{{addressDetail}}</text>
          </view>
        </view>
        <view class="jiantou_view">
            <image class="jiantou" src="/pics/icons/jiantou_grey.png" mode="widthFix"></image>
        </view>
      </view>   
      <view wx:else class="address_view" catchtap="choose_address">
        <view class="address_icon_view">
            <image class="address_icon" src="/pics/icons/address_icon.png" mode="widthFix"></image>
        </view>
        <view class="notice_view">
            <text class="notice">请选择您的收货地址!</text>
        </view>
        <view class="jiantou_view">
            <image class="jiantou" src="/pics/icons/jiantou_grey.png" mode="widthFix"></image>
        </view>
      </view>  
      <view class="thin_line"></view>
      <view class="order_time_view">
          <view class="address_icon_view">
              <image class="address_icon" src="/pics/icons/clock.png" mode="widthFix"></image>
          </view>
          <view class="order_time_title_view">
              <text class="order_time_title">送达时间：</text>
          </view>
          <view class="order_time_content_view">
              <text class="order_time_content">{{expect_time}}</text>
          </view>
      </view>
      <view class="strong_line"></view>
      <view class="bis_name_view">
          <text class="bis_name">{{bis_res.bis_name}}</text>
      </view>
      <view class="pro_thin_line"></view>
      <block wx:for="{{wm_cart_info}}">
          <view class="pro_info">
              <view class="img_view">
                  <image class="img" src="{{imgUrl + item.image}}"></image>
              </view>
              <view class="nameAndPrice">
                  <view class="pro_name_view">
                      <text class="pro_name">{{item.p_name}}</text>
                  </view>
                  
                  <view class="price_view">
                      <view class="unit_price_view">
                          <text class="price">￥{{item.original_price}}</text>
                      </view>
                      <view class="count_view">
                          <text class="count">x{{item.selected_count}}</text>
                      </view>
                  </view>
              </view>
          </view>
          <view class="pro_thin_line"></view>
      </block>
      <view class="lunch_box_view">
          <view class="lunch_box_title_view">
              <text class="lunch_box_title">餐盒费</text>
          </view>
          <view class="lunch_box_content_view">
              <text class="lunch_box_content">￥{{lunch_box_fee}}</text>
          </view>
      </view>
      <view class="distribution_fee_view">
          <view class="distribution_fee_title_view">
              <text class="distribution_fee_title">配送费</text>
          </view>
          <view class="distribution_fee_content_view">
              <text class="distribution_fee_content">￥{{distribution_fee}}</text>
          </view>
      </view>
      <view wx:if="{{show_act_res}}" class="pro_thin_line"></view>
      <block wx:if="{{show_act_res}}" wx:for="{{act_res}}">
          <view class="activity_view">
              <view class="activity_image_view">
                  <image wx:if="{{item.type == 1}}" class="activity_image" src="/pics/icons/sub.png" mode="widthFix"></image>
                  <image wx:else class="activity_image" src="/pics/icons/first.png" mode="widthFix"></image>
              </view>
              <view class="activity_title_view">
                  <text class="activity_title">{{item.activity_name}}</text>
              </view>
              <view class="activity_content_view">
                  <text class="activity_content">-￥{{item.lose}}</text>
              </view>
          </view>
      </block>
      <view class="pro_thin_line"></view>
      <view class="total_amount_view">
          <view class="paid_view">
              <text class="paid_title">实付: <text class="paid">￥{{paid_amount}} </text></text>
          </view>
      </view>
      <view class="no_top_thin_line"></view>
      <view class="remark_view">
          <label class="remark_label">备注：</label>
          <input class="remark_input" name="remark" type='text' placeholder='选填，60字以内'></input>
      </view> 
      <view class="strong_line"></view>
      <view class="buttons">
          <view class="c_order_button_view">
              <button class="c_order_button" formType="submit">微信支付</button>
          </view>
      </view>
    </form>
</view>