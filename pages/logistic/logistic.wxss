page {
  background-color: #f1f1f1;
}

.logistic_container {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
}

.logistic_info_view {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 220rpx;
  background-color: #fff;
}

.l1 {
  display: flex;
  flex-wrap: wrap;
  box-sizing: border-box;
  width: 100rpx;
  margin-left: 30rpx;
}

.l2 {
  display: flex;
  flex-direction:column;
  margin-top: 40rpx;
}

.icon {
  width: 80rpx;
  height: 80rpx;
  margin-top: 50rpx;
}

.order_no {
  margin-left: 30rpx;
  color: #ef6d16;
  font-size: 30rpx;
  height: 60rpx;
  line-height: 60rpx;
}

.order_offer {
  color: #999;
  font-size: 25rpx;
  height: 40rpx;
  line-height: 40rpx;
  margin-left:30rpx; 
}

.trace {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  background-color: #fff;
  margin-top: 30rpx;
}

.trace_view {
  display: flex;
  flex-direction: column;
  width: 90%;
  background-color: #fff;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  color: #999;
  font-size: 26rpx;
}

.trace_view_first {
  display: flex;
  flex-direction: column;
  width: 90%;
  background-color: #fff;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  color: #f00;
  font-size: 30rpx;
}

.single_trace_view {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
}

.trace_date {
  width: 100%;
  height: 100%;
  color: black;
}

.trace_content {
  width: 100%;
  height: 100%;
}

.trace_date_first {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
}

.trace_content_first {
  width: 100%;
  height: 100%;
}

.trace_title {
  font-size: 30rpx;
  color: #746948;
  margin-top: 20rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
  border-bottom: 1px solid #f1f1f1;
}
