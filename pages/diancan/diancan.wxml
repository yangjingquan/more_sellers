<!--diancan.wxml-->
    <!--主盒子-->  
<!-- <import src="/pages/index/head_template/head_template.wxml"/> -->
<view class="diancan_container">
    <view class="head_view">
        <view class="bis_view">
            <view class="img_view">
                <image src="{{imgUrl + img_res.logo_image}}" class="img"></image>
            </view>
            <view class="bis_content_view">
                <view class="bis_name_view">
                    <text class="bis_name">{{bis_res.bis_name}}</text>
                </view>
                <view class="scope_view">
                    <text class="scope">配送范围：{{bis_res.scope}}公里 | ￥{{bis_res.min_price}}元起送</text>
                </view>
                <view class="gonggao_view">
                    <text class="gonggao">公告：本店小程序上线，欢迎体验！</text>
                </view>
            </view>
        </view>
        <view class="act_view">
            <view class="activity_view">
                <swiper class="s_swiper" autoplay="true" interval="3000" circular="true" vertical="true">
                    <block wx:for="{{act_res}}">
                      <swiper-item class="ss_swiper">
                          <text class="ss_text">{{item.activity_name}}</text>
                      </swiper-item>
                    </block>
              </swiper>
            </view>
            <view class="act_count_view">
                <text class="act_count">{{act_count}}个活动</text>
            </view>
        </view>
    </view>
    <view class="container">
       <view class="nav_left "> 
          <scroll-view style="height:100%;" scroll-y="{{true}}">
               <block wx:for="{{cat_info}}"> 
                   <view class="nav_left_items {{return_id == item.cat_id ? 'active' : ''}}" bindtap="scrollToViewFn" data-catid="{{item.cat_id}}">{{item.cat_name}}</view>
               </block>
          </scroll-view> 
      </view>   
      <view class="nav_right">  
        <view style="height:100%;">
        <scroll-view style="height:100%;" scroll-into-view="{{toView}}" scroll-y="{{true}}">  
                 <block wx:for="{{pro_info}}"> 
                    <view class="products">
                        <view class="category_view" id="{{'inToView'+item.cat_id}}">
                            <text class="category">{{item.cat_name}}</text>
                        </view>
                        <block wx:for="{{item.pro_info}}" wx:for-item="proItem" wx:for-index="proIndex">
                            <view class="one_pro" bindtap="getProDetail" data-proid=''>
                                <view class="pro_image_view">
                                    <image class="pro_image" src="{{imgUrl + proItem.image}}"></image>
                                </view>
                                <view class="nameAndPrice">
                                    <view class="pro_name_view">
                                        <text class="pro_name">{{proItem.p_name}}</text>
                                    </view>
                                    <view class="sold_view">
                                        <text class="sold">已付款108份</text>
                                    </view>
                                    <view class="pricesAndPlus">
                                        <view class="price_view">
                                            <text class="cur_price">￥{{proItem.original_price}}</text>
                                        </view>
                                        <view class="buttons_view">
                                              <view wx:if="{{proItem.selected_count != 0}}" class="sub_view" catchtap="sub" data-catindex="{{index}}" data-proindex="{{proIndex}}" data-scount="{{proItem.selected_count}}">
                                                <image class="sub" src="/pics/icons/subtraction.png" mode="widthFix"></image>
                                            </view>
                                            <view class="count_view" wx:if="{{proItem.selected_count != 0}}">
                                                <text class="count">{{proItem.selected_count}}</text>
                                            </view>  
                                            <view class="plus_view {{proItem.selected_count == 0 ? 'only_plus_view' : ''}}" catchtap="plus" data-catindex="{{index}}" data-proindex="{{proIndex}}" data-scount="{{proItem.selected_count}}">
                                                <image class="plus" src="/pics/icons/plus.png" mode="widthFix"></image>
                                            </view>
                                        </view>
                                    </view>
                                </view>
                            </view>
                            <view class="line"></view>
                        </block>
                      <view class="line"></view>
                    </view>
                 </block> 
            </scroll-view>
        </view>
      </view>   
    </view> 
    <view class="bottoms">
        <view class="cart_view">
            <image class="cart_img" src="/pics/icons/diancan_cart.png" mode="widthFix"></image>
        </view>
        <view class="total_price_view">
            <text class="total_price">总计：￥{{total_amount}}</text>
        </view>
        <view class="jiesuan_view" bindtap="jiesuan">
            <text class="jiesuan" catchtap="jiesuan">去结算</text>
        </view>
    </view>
</view> 
