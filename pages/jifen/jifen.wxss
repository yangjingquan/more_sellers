.recorder_container {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
}

.tongji {
  display: flex;
  flex-direction: column;
  background-color: #00cec9;
  height: 200rpx;
}

.tongji1 {
  color: #f1f1f1;
  font-size: 30rpx;
  margin-top: 30rpx;
  margin-left: 40rpx;
}

.tongji2 {
  color: #fff;
  font-size: 60rpx;
  margin-top: 20rpx;
  margin-left: 40rpx;
}

.order_con {
  margin-top: 30rpx;
  margin-bottom: 20rpx;
}

.order_con1 {
  display: flex;
  flex-direction: row;
  border-bottom: 1px #f2f2f2 solid;
}

.order_no {
  margin-left: 5%;
  font-size: 26rpx;
  color: #000;
  width: 60%;
  height: 60rpx;
  line-height: 60rpx;
}

.order_con2 {
  display: flex;
  flex-direction: row;
  margin-left: 2%;
  margin-right: 2%;
  width: 96%;
  border-bottom: 1px #f2f2f2 solid;
  height: 90rpx;
  line-height: 90rpx;
}

.images {
  /**让包含的图片居中**/
  display: flex;
  justify-content: center;
  align-items: center;
  /**让包含的图片居中**/
  width: 80rpx;
  margin-left: 10rpx;
}

.order_icon {
  width: 60rpx;
  height: 60rpx;
}

.order_total {
  margin-left: 3%;
  width: 100%;
  font-size: 26rpx;
  color: #999;
}

.order_buy {
  width: 40%;
  font-size: 28rpx;
  color: #999;
  margin-left: 5rpx;
}

.order_income {
  width: 50%;
  font-size: 32rpx;
  color: #f00;
}
