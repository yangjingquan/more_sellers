.bis_title_view{
    width: 100%;
    height: 80rpx;
    display: flex;
    flex-direction: row;
}

.bis_checkbox_view{
    width: 5%;
    margin-left: 3%;
    height:80rpx;
    margin-top:2%;
}

.checkbox3{
    width:15px;
    height:15px;
    border: 1px solid #aaaaaa;
    border-radius: 50px;
}

.bis_img_view{
    width: 11%;
    height: 80rpx;
}

.bis_img{
    width:70%;
    height: 70%;
    margin:15% 15%;
}

.bis_name_view{
    width: 60%;
    height: 80rpx;
    display:flex;
}

.bis_name{
    font-size: 30rpx;
    line-height: 80rpx;
}

.pro_info{
    display: flex;
    flex-direction: row;
    width: 100%;
    height: 240rpx;
    margin-top: 20rpx;
}

.checkbox_view{
    width: 8%;
    margin-left: 3%;
    height:90rpx;
    margin-top:11%;
}

.checkbox1{
    width:15px;
    height:15px;
    border: 1px solid #aaaaaa;
    border-radius: 50px;
}

.pro_image_view{
    width:190rpx;
    height:190rpx;
}

.pro_image{
    width: 100%;
    height: 100%;
}

.nameAndPrice{
    display: flex;
    flex-direction: column;
    width: 59%;
    margin-left:6rpx;
}

.pro_name_view{
    width: 100%;
    word-break: break-all;
}

.pro_name{
    font-size: 26rpx;
    color: #000;
    word-break: break-all;
    text-overflow: ellipsis; 
    display: -webkit-box;  
    -webkit-line-clamp: 2;  
    -webkit-box-orient: vertical;
    overflow: hidden;
}

.guige_view{
    margin-top: 5rpx;
}

.guige{
    font-size: 24rpx;
    color: #a9a9a9;
}

.priceAndCount{
    display: flex;
    flex-direction: row;
    width: 100%;
}

.price_view{
    margin-top: 15rpx;
    width: 35%;
}

.price{
    font-size: 32rpx;
    color: #a9a9a9;
}

.line{
    background-color: #f3f3f3;
    height: 2rpx;
    width: 95%;
    margin-left: 5%;
}

.short_line{
    background-color: #f3f3f3;
    height: 2rpx;
    width: 65%;
    margin-left: 35%;
}

.strong_line{
    margin-top: -2rpx;
    background-color: #f3f3f3;
    height: 15rpx;
    width: 100%;
}

.count_view{
    display: flex;
    flex-direction: row;
    width: 40%;
    margin-left: 24%;
    height: 58rpx;
    margin-top:-7%;
}

.sub_view{
    width: 30%;
    border: 1px solid #EEEEEE;
    border-radius: 5px 0 0 5px;
    text-align: center;
    height: 58rpx;
}

.sub{
    line-height: 58rpx;
}

.count_view1{
    width: 40%;
    border: 1px solid #EEEEEE;
    text-align: center;
    height: 58rpx;
    border-left: none;
    border-right: none;
}

.count{
    font-size: 32rpx;
    line-height: 58rpx;
}

.plus_view{
    width: 30%;
    border: 1px solid #EEEEEE;
    border-radius: 0 5px 5px 0;
    text-align: center;
    height: 58rpx;
}

.plus{
    line-height: 58rpx;
}

.delete_view{
    width:39%;
    height:58rpx;
    border:1px solid #EEEEEE;
    border-radius:10rpx;
    text-align:center;
    margin-left:59%;
    margin-top:-5%;
}

.delete{
    font-size: 28rpx;
    line-height: 62rpx; 
    color: #bbbbbb;
}

.bottoms{
    display: flex;
    flex-direction: row;
    width: 100%;
    height: 100rpx;
    bottom: 0;
}

.check_view,.total_price_view,.jiesuan_view{
    position: fixed;
    bottom: 0;
    height: 100rpx;
    text-align: center;
}

.total_price_view,.jiesuan_view{
    font-size: 16px;
    line-height: 100rpx;
}

.check_view{
    width: 20%;
    background-color: #eeeeee;
    border-top: 1px solid #cccccc;
}

.checkbox2{
    width:15px;
    height:15px;
    margin-top: 22%;
    border: 1px solid #aaaaaa;
    border-radius: 50px;
}

.total_price_view{
    width: 50%;
    margin-left: 20%;
    background-color: #eeeeee;
    border-top: 1px solid #cccccc;
}

.total_price{
    color: #fe4a65;
    font-size:30rpx;
}
.jiesuan_view{
    width: 30%;
    margin-left: 70%;
    background-color: #F2A93B;
    border-top: 1px solid #cccccc;
}

.jiesuan{
    color: #fff;
}

.disabled{
  color: #CECECE;
}

