.address_container {
    display: flex;
    flex-direction: column;
    width: 100%;
    height: 100%;
}

.address_content{
    display: flex;
    flex-direction: row;
    width: 100%;
    height: 160rpx;
    margin-top: 2%;
}

.address_info{
    display:flex;
    flex-direction:column;
    width:80%;
    margin-left:5%;
    height:100%;
}

.nameAndMobile{
    display: flex;
    flex-direction: row;
    width: 100%;
    height: 60rpx;
}

.name_view{
    width: 20%;
    height: 60rpx;
}

.name{
  font-size: 32rpx;
  line-height: 60rpx;
}

.mobile_view{
    width: 40%;
    height: 60rpx;
    margin-left: 5%;
}

.mobile{
    font-size: 32rpx;
    line-height: 60rpx; 
}

.addressAndEdit{
    display: flex;
    flex-direction: row;
    width: 100%;
    height: 100rpx;
}

.address_view{
    width: 100%;
    word-break: break-all;
    margin-top:10%;
}

.address{
   font-size: 28rpx;
   color: #b0b0b0; 
}

.editAndDelete{
    display: flex;
    flex-direction: column;
    width: 13%;
    margin-left: 1%;
}

.edit_view{
   width: 55%;
   text-align: center;
   margin-top:15%;
   margin-left:17%;
}

.edit_pic{
    width:80%;
    height: 50rpx;
    margin-top: 8%;
}

.delete_view{
    width: 70%;
    text-align: center;
    margin-left:10%;
}

.delete_pic{
    width:80%;
    height: 50rpx;
    margin-top: 8%;
}

.line{
    margin-top: 10rpx;
    background-color: #e8e8e8;
    height: 3rpx;
    width: 97%;
    margin-left: 3%;
}

.buttons{
    display: flex;
    flex-direction: row;
    width: 100%;
    height: 80rpx;
    bottom: 0;
    margin-bottom: 2%;
}

.new_address_view{
    position: fixed;
    bottom: 0;
    height: 80rpx;
    text-align: center;
    width: 90%;
    background-color: #DE443B;
    margin-left: 5%;
    margin-bottom: 2%;
}

.new_address{
    font-size: 16px;
    line-height: 80rpx;
    color: #fff;
}

.no_address_view{
    width: 90%;
    margin-left: 5%;
    margin-top: 60%;
    text-align: center; 
}

.no_address_text{
    font-size: 36rpx;
    color: #b0b0b0;
}
