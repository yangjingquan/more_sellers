.address_container{
    display: flex;
    flex-direction: column;
    width: 100%;
    height: 100%;
}

.receiver_view,.contact_view,.detail_address_view,.area_view,.idno_view{
    display: flex;
    flex-direction: row;
    width: 100%;
    margin-top: 3%; 
    height: 80rpx;
}

.receiver_label,.contact_label,.detail_address_label,.area_label,.idno_label{
    font-size: 32rpx;
    color: #B9B9B9;
    margin-left: 3%;
    line-height: 80rpx;
}

.receiver_input,.contact_input,.detail_address_input,.idno_input{
    width: 560rpx;
    font-size: 32rpx;
    color: #000000;
    line-height: 80rpx;
    margin-top: 2%; 
}

.picker{
    font-size: 32rpx;
    color: #000000;
    line-height: 80rpx;
}
.line{
    margin-top: 10rpx;
    background-color: #e8e8e8;
    height: 3rpx;
    width: 100%;
}

button{
    background-color:#DE443B;
}

.buttons{
    height: 80rpx;
    margin-top: 10%;
}

.new_address_view{
    bottom: 0;
    height: 80rpx;
    text-align: center;
    width: 60%;
    margin-left: 20%;
}

.new_address{
    font-size: 16px;
    line-height: 80rpx;
    color: #fff;
}